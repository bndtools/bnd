<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" immediate="true" name="com.qivicon.backendclient.credentials.BackendCredentialsProvider">
   <implementation class="com.qivicon.backendclient.credentials.impl.BackendCredentialsProviderImpl"/>
   <service>
      <provide interface="com.qivicon.backendclient.credentials.BackendCredentialsProvider"/>
      <provide interface="org.osgi.service.event.EventHandler" />
   </service>
   
   <reference bind="setBackendHttpClient" cardinality="0..1" interface="com.qivicon.backendclient.httpclient.BackendHttpClient"
   		name="BackendHttpClient" policy="dynamic" unbind="unsetBackendHttpClient"/>
   <reference bind="setEventAdmin" cardinality="1..1" interface="org.osgi.service.event.EventAdmin"
   		name="EventAdmin" policy="static" unbind="unsetEventAdmin"/>
   <reference bind="setGatewayService" cardinality="1..1" interface="com.qivicon.service.hal.gateway.GatewayService"
   		name="GatewayService" policy="static" unbind="unsetGatewayService"/>

   <property name="event.topics" type="String">
		gateway/lifecycle/registered
   </property>
</scr:component>