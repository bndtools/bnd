<?xml version="1.0" encoding="UTF-8"?>
<project name="junit4test" default="build"> 
	<property name="workspacedir" value=".."/>
	<import file="${workspacedir}/cnf/build.xml"/>

	<target name="ant-test-windows" if="${windows}">
		<macro.runant.windows result="junit4testpass.result"/>
	</target>
	<target name="ant-test-linux" if="${linux}">
		<macro.runant.linux result="junit4testpass.result"/>
	</target>
	<target name="dotest" depends="ant-test-windows, ant-test-linux">

    <echo message="junit4testpass.result=${junit4testpass.result} (0=pass, which is what we are expecting)"/>
    <condition property="junit4testpass.passed">
	    <equals arg1="${junit4testpass.result}"
		    arg2="0"/>
    </condition>
    <fail unless="junit4testpass.passed"/>
  </target>

</project>
