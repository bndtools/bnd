#
# Create the bnd documentation
#

languages 	= en
sources 	= src/${language}/*.md
images		= www/${language}/img

[pdf]
author		= Peter Kriens
[]

-do :	\
	www/${language}/bnd.pdf; \
		type=PDF;
		template=templates/pdf-template.htm; \
	www/${language}/bnd.html; \
		type=HTML;
		template=templates/single-html-template.htm; \
		inner-template=templates/single-html-inner-template.htm; \
		images=${language}_images, \
	www/${language}; \
		type=MULTI; 
		template=templates/html-template.htm	
